@layout.app()
  @body()
    @!nav()
    <div class="w-full flex flex-col justify-center items-center">
      <div class="w-96">
        @form({action: route('user.create') , method:'post'})
          @!input({
            name: 'name',
            type: 'text',
            id: 'name',
            placeholder: 'Username123',
          })
          @!input({
            name: 'email',
            type: 'email',
            id: 'email',
            placeholder: 'name@flowbite.com',
          })
          @!input({
            name: 'password',
            type: 'password',
            id: 'password',
            placeholder: 'Password',
          })
          @!button({
            'data-value': 'Submit'
          }) 
        @end
      </div>
    </div>
    @!footer()
  @end
@end
